@model IEnumerable<Product>

<div class="text-center my-5">
	<div class="display-6">Product List</div>

	<div class="d-flex justify-content-end">
		<a class="btn btn-outline-success mt-3" asp-controller="Product" asp-action="Create"><i class="fa fa-plus"></i> Create</a>
	</div>

	<table class="table table-striped table-hover my-3">
		<thead>
			<tr>
				<th>Id</th>
				<th>Product Name</th>
				<th>Price</th>
				<th>Operations</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Product item in Model)
			{
				<tr>
					<td>@item.ProductId</td>
					<td>@item.ProductName</td>
					<td>@item.Price.ToString("c")</td>
					<td>
						<div class="btn-group">
							<a class="btn btn-outline-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.ProductId"><i class="fa fa-edit"></i>Edit</a>
							<a class="btn btn-outline-dark" asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId"><i class="fa fa-trash"></i> Delete</a>
							<a class="btn btn-outline-info" target="_blank" asp-controller="Product" asp-action="Get" asp-area="" asp-route-id="@item.ProductId"><i class="fa fa-search"></i> Preview</a>							
						</div>						
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

