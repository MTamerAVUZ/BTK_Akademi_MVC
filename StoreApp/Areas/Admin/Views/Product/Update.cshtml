@model ProductDtoForUpdate


<div class="text-center my-5">
	<div class="display-6">Update </div>
</div>


<form asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data">
	<input type="hidden" asp-for="ProductId" />
	<div class="form-group my-3">
		<label class="mb-3" asp-for="ProductName"></label>
		<input asp-for="ProductName" class="form-control" />
		<span class="text-danger" asp-validation-for="ProductName"></span>
	</div>
	<div class="form-group my-3">
		<label class="mb-3" asp-for="Summary"></label>
		<textarea asp-for="Summary" class="form-control" ></textarea>
		<span class="text-danger" asp-validation-for="Summary"></span>
	</div>
	<div class="form-group my-3">
		<label class="mb-3" asp-for="Price"></label>
		<input asp-for="Price" class="form-control" />
		<span class="text-danger" asp-validation-for="Price"></span>
	</div>
	<div class="form-group my-3" >
		<img class="rounded shadow" style="height:200px" src="@Model?.ImageUrl" />
	</div>
	<div class="form-group my-3">
		<label class="mb-3" asp-for="ImageUrl"></label>
		<input type="file" name="file" class="form-control" />
		<span class="text-danger" asp-validation-for="ImageUrl"></span>
	</div>
	<div class="form-group my-3">
		<label class="mb-3" asp-for="CategoryId"></label>
		<select class="form-control" asp-for=CategoryId asp-items="ViewBag.Kategoriler">
			<option value="0" selected disabled>Choose a Category</option>
		</select>
	</div>
	<div class="form-group my-3 text-center">
		<div class="btn-group">
			<button class="btn btn-outline-primary" type="submit"><i class="fa fa-save"></i> Update</button>
			<a asp-action="Index" class="btn btn-outline-warning" type="submit"><i class="fa-solid fa-backward"></i> Back</a>
		</div>

	</div>
</form>